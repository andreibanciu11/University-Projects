@using CityLinks.Models
@model List<CityLinkInfo>
@{
    ViewBag.Title = "RouteContinueView";
}

<head>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <link rel="stylesheet" href="~/Content/style.css">
    <title>Personal Library - Main</title>
    <style>
        html, body {
            height: 650px;
            width: 99%;
            align-content: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            table th,
            table td {
                padding: 8px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            table th {
                background-color: #f2f2f2;
            }
    </style>
</head>

<h3>These are all the linked cities for the current selected starting city</h3>

@if (Model != null && Model.Count > 0)
{
    <table>
        <tr>
            <th>Name of first City</th>
            <th>Name of second City</th>
            <th>Duration</th>
            <th>Distance</th>
        </tr>
        @foreach (var city in Model)
        {
            <tr>
                <td>@city.Name1</td>
                <td>@city.Name2</td>
                <td>@city.Duration</td>
                <td>@city.Distance</td>
            </tr>
        }
    </table>
}
else
{
    <p>No linked cities found.</p>
}

<form method="POST" action="/RouteContinue/RouteContinue" style="display: flex; flex-direction: column; width: 30%">
    Name: <input type="text" id="name" name="name">
    <input type="submit" value="Select next city" name="selectCity">
</form>



